package entities;

public class Conta {

	private int number;
	private String holder;
	private double saldo;
	
	public Conta() {
	
	}

	public Conta(int number, String holder) {
		this.number = number;
		this.holder = holder;
	}

	public int getNumber() {
		return number;
	}

	public void setNumber(int number) {
		this.number = number;
	}

	public String getHolder() {
		return holder;
	}

	public void setHolder(String holder) {
		this.holder = holder;
	}

	public double getSaldo() {
		return saldo;
	}

	public double saldoDps(double deposito) {
		 saldo += deposito;
		 
		 return saldoDps(deposito);
	}
	
	public double saldoSqe(double saque) {
		 saldo -= saque + 5;
		 
		 return saldoSqe(saque);
	}
}
