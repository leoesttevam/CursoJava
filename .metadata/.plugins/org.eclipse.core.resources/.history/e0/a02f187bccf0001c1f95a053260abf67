package constThisSobrEncapsu;

public class CProduct {
	

	private String nome;
	private double preco;
	private int quantidade;
	
	//Aula Construtor
	public CProduct(String nome, double preco, int quantidade) {
		this.nome = nome;
		this.preco = preco;
		this.quantidade = quantidade;
	}
	
	//Aula Sobrecarga
	public CProduct(String nome, double preco) {
		this.nome = nome;
		this.preco = preco;
		quantidade = 0; //é opcional
	}
	
	public double totalEstoque() {
		return preco * quantidade;
	}
	
	public void addProduto(int quantidade) {
		this.quantidade += quantidade;
	}
	
	public void removeProduto(int quantidade) {
		this.quantidade -= quantidade;
	}
	
	public String toString() {
		return "Product: " + nome + ", Price $ " + String.format("%.2f", preco) + ", Stock " + quantidade + " units, Total: $ " + String.format("%.2f", totalEstoque());
	}
}
