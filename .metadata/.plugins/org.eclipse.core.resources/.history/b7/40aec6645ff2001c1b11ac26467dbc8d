package heranca;

import entities.Account;
import entities.BusinessAccount;
import entities.SavingAccount;

public class Program {

	public static void main(String[] args) {
		
		Account acc = new Account(1001, "Alex", 0.0);
		BusinessAccount bcc = new BusinessAccount(1002, "Maria", 0.0, 500.0);
		
		//UPCASTING -> é o processo de converte um obj da superclasse para subclasse.
		
		Account acc1 = bcc;
		Account acc2 = new BusinessAccount(1003, "ANNA", 0.0, 200.0);
		Account acc3 = new SavingAccount(1004, "Lidy", 0.0, 800.0);
		
		//DOWNCASTING -> é o processo de converte um obj da subclasse para superclasse.
		BusinessAccount acc4 = (BusinessAccount) acc2;
		
		if(acc3 instanceof BusinessAccount) {
			BusinessAccount acc5 = (BusinessAccount) acc3;
			acc5.emprestimo(300);
			System.out.println("Emprestimo: ");
		}
		
		if(acc3 instanceof SavingAccount) {
			SavingAccount acc5 = (SavingAccount) acc3;
			acc5.updateSaldo();
			System.out.println("Update!");
		}
	}
}
